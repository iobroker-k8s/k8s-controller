{
    "name": "k8s-controller",
    "version": "0.0.1",
    "description": "ioBroker Kubernetes Controller",
    "main": "build/index.js",
    "scripts": {
        "build": "tsc --build tsconfig.build.json",
        "dev": "npm run build && node build/index.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write src/**/*.ts",
        "format:check": "prettier --check src/**/*.ts",
        "start": "IOB_HOSTNAME=k8s-cluster ts-node src/index.ts"
    },
    "keywords": [
        "iobroker",
        "kubernetes",
        "k8s",
        "controller"
    ],
    "author": "UncleSamSwiss",
    "license": "MIT",
    "engines": {
        "node": ">=24.0.0"
    },
    "dependencies": {
        "@iobroker/js-controller-common": "^7.0.7",
        "@iobroker/js-controller-common-db": "^7.0.7",
        "@kubernetes/client-node": "^1.3.0",
        "cron-parser": "^4.9.0",
        "deep-clone": "^3.0.3",
        "fs-extra": "^11.3.2",
        "iobroker.js-controller": "^7.0.7",
        "node-schedule": "^2.1.1",
        "pidusage": "^4.0.1",
        "semver": "^7.7.2",
        "yaml": "^2.8.1",
        "yargs": "^18.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.36.0",
        "@iobroker/types": "^7.0.7",
        "@types/fs-extra": "^11.0.4",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.5.2",
        "@types/node-schedule": "^2.1.0",
        "@types/pidusage": "^2.0.5",
        "@types/semver": "^7.7.1",
        "@types/yargs": "^17.0.33",
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.44.0",
        "eslint": "^9.36.0",
        "jest": "^30.1.3",
        "prettier": "^3.6.2",
        "ts-jest": "^29.4.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2"
    },
    "overrides": {
        "@iobroker/adapter-core": "^3.2.1"
    }
}
